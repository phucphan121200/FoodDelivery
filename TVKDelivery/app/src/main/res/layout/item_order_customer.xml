<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemOrderCustomer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgdetailcus"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvDeliverAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppins"
        android:maxLength="40"
        android:text="Phone"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txtpicture"
        app:layout_constraintTop_toBottomOf="@+id/txtIDOrder" />

    <TextView
        android:id="@+id/tvTotalItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:text="Phone"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txtpicture"
        app:layout_constraintTop_toBottomOf="@+id/txtIDOrder" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/txtpicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_icon_stroke"
        android:foreground="@drawable/order1"
        app:civ_circle_background_color="#814A4A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtIDOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txtpicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStarttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins"
        android:text="Phone"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txtpicture"
        app:layout_constraintTop_toBottomOf="@+id/txtIDOrder" />

    <ImageButton
        android:id="@+id/btnDetailOrderCus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/detail" />

</androidx.constraintlayout.widget.ConstraintLayout>